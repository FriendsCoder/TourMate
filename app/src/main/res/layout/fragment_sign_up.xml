<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:gravity="center"
    tools:context=".fragments.SignUpFragment">

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/ic_perm_identity_black_24dp"
    android:scaleType="fitXY"
    android:layout_marginBottom="20dp"
    android:tooltipText="df"
    />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_user_24dp"
            />
    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_user_24dp"
            />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_lock_open_24dp"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact No"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_local_phone_24dp"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:drawablePadding="10dp"
            android:textColorHint="#ffffff"
            android:maxLines="1"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_address_24dp"
            />
    </android.support.design.widget.TextInputLayout>




</LinearLayout>